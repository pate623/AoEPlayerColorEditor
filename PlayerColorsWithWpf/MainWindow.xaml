<Window x:Class="PlayerColorsWithWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="AOE:DE Custom Player Colors" Height="430" Width="310">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,20,0,0" TextWrapping="Wrap" Text="Player Color" VerticalAlignment="Top" FontSize="14"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,50,0,0" TextWrapping="Wrap" Text="Blue" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,75,0,0" TextWrapping="Wrap" Text="Red" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,100,0,0" TextWrapping="Wrap" Text="Yellow" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,125,0,0" TextWrapping="Wrap" Text="Brown" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,150,0,0" TextWrapping="Wrap" Text="Orange" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,175,0,0" TextWrapping="Wrap" Text="Green" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,200,0,0" TextWrapping="Wrap" Text="Purple" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,225,0,0" TextWrapping="Wrap" Text="Teal" VerticalAlignment="Top"/>

        <TextBlock HorizontalAlignment="Left" Margin="120,20,0,0" TextWrapping="Wrap" Text="Your Edit" VerticalAlignment="Top" FontSize="14"/>
        <Rectangle x:Name="BluePlayerColor" MouseDown="BluePlayer_MouseDown" Width="18" Height="18" HorizontalAlignment="Left" Margin="140,50,0,0" VerticalAlignment="Top" Cursor="Hand" Fill="#FF2D2DF5">
        </Rectangle>
        <Rectangle x:Name="RedPlayerColor" MouseDown="RedPlayer_MouseDown" Width="18" Height="18" HorizontalAlignment="Left" Margin="140,75,0,0" VerticalAlignment="Top" Cursor="Hand" Fill="#FFD22828">
        </Rectangle>
        <Rectangle x:Name="YellowPlayerColor" MouseDown="YellowPlayer_MouseDown" Width="18" Height="18" HorizontalAlignment="Left" Margin="140,100,0,0" VerticalAlignment="Top" Cursor="Hand" Fill="#FFD7D61E">
        </Rectangle>
        <Rectangle x:Name="BrownPlayerColor" MouseDown="BrownPlayer_MouseDown" Width="18" Height="18" HorizontalAlignment="Left" Margin="140,125,0,0" VerticalAlignment="Top" Cursor="Hand" Fill="#FF8E5B00">
        </Rectangle>
        <Rectangle x:Name="OrangePlayerColor" MouseDown="OrangePlayer_MouseDown" Width="18" Height="18" HorizontalAlignment="Left" Margin="140,150,0,0" VerticalAlignment="Top" Cursor="Hand" Fill="#FFFF9605">
        </Rectangle>
        <Rectangle x:Name="GreenPlayerColor" MouseDown="GreenPlayer_MouseDown" Width="18" Height="18" HorizontalAlignment="Left" Margin="140,175,0,0" VerticalAlignment="Top" Cursor="Hand" Fill="#FF04A514">
        </Rectangle>
        <Rectangle x:Name="PurplePlayerColor" MouseDown="PurplePlayer_MouseDown" Width="18" Height="18" HorizontalAlignment="Left" Margin="140,200,0,0" VerticalAlignment="Top" Cursor="Hand" Fill="#FF960FFA">
        </Rectangle>
        <Rectangle x:Name="TealPlayerColor" MouseDown="TealPlayer_MouseDown" Width="18" Height="18" HorizontalAlignment="Left" Margin="140,225,0,0" VerticalAlignment="Top" Cursor="Hand" Fill="#FF7EF2E1">
        </Rectangle>


        <TextBlock HorizontalAlignment="Left" Margin="205,20,0,0" TextWrapping="Wrap" Text="Default Value" VerticalAlignment="Top" FontSize="14"/>

        <Rectangle Width="18" Height="18" HorizontalAlignment="Left" Margin="240,50,0,0" VerticalAlignment="Top">
            <Rectangle.Fill>
                <SolidColorBrush Color="#FF2D2DF5" />
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle Width="18" Height="18" HorizontalAlignment="Left" Margin="240,75,0,0" VerticalAlignment="Top">
            <Rectangle.Fill>
                <SolidColorBrush Color="#FFD22828" />
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle Width="18" Height="18" HorizontalAlignment="Left" Margin="240,100,0,0" VerticalAlignment="Top">
            <Rectangle.Fill>
                <SolidColorBrush Color="#FFD7D61E" />
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle Width="18" Height="18" HorizontalAlignment="Left" Margin="240,125,0,0" VerticalAlignment="Top">
            <Rectangle.Fill>
                <SolidColorBrush Color="#FF8E5B00" />
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle Width="18" Height="18" HorizontalAlignment="Left" Margin="240,150,0,0" VerticalAlignment="Top">
            <Rectangle.Fill>
                <SolidColorBrush Color="#FFFF9605" />
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle Width="18" Height="18" HorizontalAlignment="Left" Margin="240,175,0,0" VerticalAlignment="Top">
            <Rectangle.Fill>
                <SolidColorBrush Color="#FF04A514" />
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle Width="18" Height="18" HorizontalAlignment="Left" Margin="240,200,0,0" VerticalAlignment="Top">
            <Rectangle.Fill>
                <SolidColorBrush Color="#FF960FFA" />
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle Width="18" Height="18" HorizontalAlignment="Left" Margin="240,225,0,0" VerticalAlignment="Top">
            <Rectangle.Fill>
                <SolidColorBrush Color="#FF7EF2E1" />
            </Rectangle.Fill>
        </Rectangle>

        <TextBlock HorizontalAlignment="Center" Margin="0,105" TextWrapping="Wrap" Text="Currently Active Player Color Preset" VerticalAlignment="Bottom" FontSize="12"/>

        <ComboBox x:Name="PresetSelectionDropdown" SelectionChanged="PresetDropdown_SelectionChanged" HorizontalAlignment="Center" Margin="0, 80" VerticalAlignment="bottom" Width="140">
            <ComboBoxItem IsSelected="True" Content="Choice 1"></ComboBoxItem>
            <ComboBoxItem Content="Choice 2"></ComboBoxItem>
            <ComboBoxItem Content="Choice 3"></ComboBoxItem>
        </ComboBox>

        <Button x:Name="CreateColors" Content="Create Colors" HorizontalAlignment="Center" Margin="90,10" VerticalAlignment="bottom" Width="100" Click="CreateColors_Click"/>

        <Button x:Name="SavePreset" Content="Save Preset"  IsEnabled="False" HorizontalAlignment="Left" Margin="50,50" VerticalAlignment="bottom" Width="100" Click="SavePreset_Click"/>

        <Button x:Name="SavePresetAs" Content="Save Preset As" HorizontalAlignment="Right" Margin="50,50" VerticalAlignment="bottom" Width="100" Click="SavePresetAs_Click"/>

        <StackPanel x:Name="PresetNamePopUp" Visibility="Collapsed" HorizontalAlignment="Center" Margin="0, 0, 0, 5" VerticalAlignment="bottom" Width="310" Height="125" Background="White">
            <TextBlock HorizontalAlignment="Center" Margin="0, 10, 0, 2" Text="Enter Name For The New Preset"/>
            <TextBox Margin="10,0"  x:Name="NewPresetNameInput" Text="New Preset Name" />
            <Button VerticalAlignment="bottom" Margin="0, 20, 0, 0" Content="Apply"  Click="AcceptNewPresetName_Click" />
            <Button VerticalAlignment="bottom" Margin="0, 10, 0, 0" Content="Cancel" Click="CancelNewPresetCreation_Click" />
        </StackPanel>
    </Grid>
</Window>
